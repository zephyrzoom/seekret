<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "mybatis-3-mapper.dtd" >
<mapper namespace="com.bocsoft.bocop.mdm.mapper.PraiseMapper">

 
   <update id="addPraise" parameterType="com.bocsoft.bocop.mdm.entity.CommentInfo">
       update lib_comment set praise_num=praise_num+1 where comment_id=#{commentId}
    </update> 
    
     <update id="subPraise" parameterType="com.bocsoft.bocop.mdm.entity.CommentInfo">
       update lib_comment set praise_num=praise_num-1 where comment_id=#{commentId}
    </update>      
 
</mapper>

